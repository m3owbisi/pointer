#include <stdio.h>
int main()
{
   int first, second, *p, *q, sum, diff;

   printf("Enter two integers to add\n");
   scanf("%d%d", &first, &second);

   p = &first;
   q = &second;

   sum = *p + *q;
   diff = *p - *q;

   printf("Sum of the numbers = %d\n", sum);
   printf("Diff of the numbers = %d\n", diff);


   return 0;
}
